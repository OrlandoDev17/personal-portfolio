---
import { STACKS } from '../consts/technologies';

import AnimateContainer from './AnimateContainer.astro';
---

{
  STACKS.map(({ title, techs, delay }) => (
    <AnimateContainer>
      <article
        class="a-fade-to-top bg-black-haze-300 size-75 md:size-85 p-4 flex flex-col items-center shadow-xl dark:shadow-white dark:shadow-lg rounded-xl mt-8 opacity-0"
        style={`animation-delay: ${delay}ms`}
      >
        <h3 class="text-2xl md:text-3xl text-violet-700 dark:text-blue-500 mb-2 md:mb-4 font-bold font-montserrat">
          {title}
        </h3>
        <ul class="flex flex-wrap justify-center  gap-4">
          {techs.map((tech) => (
            <li class="flex flex-col items-center gap-1 md:gap-2 text-primary text-lg md:text-xl">
              <tech.icon class="size-16 md:size-18" />
              {tech.name}
            </li>
          ))}
        </ul>
      </article>
    </AnimateContainer>
  ))
}
